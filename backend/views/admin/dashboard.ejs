<div class="container-fluid py-4">
  <!-- Load Chart.js once, before any charts use it -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <div class="row">
    <div class="col-md-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0"><i class="fas fa-crown text-warning me-2"></i>Admin Dashboard</h1>
        <div>
          <a href="/admin/mechanics" class="btn btn-primary me-2">
            <i class="fas fa-tools me-2"></i> Manage Mechanics
          </a>
          <a href="/admin/users" class="btn btn-outline-primary">
            <i class="fas fa-users me-2"></i> Manage Users
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-md-3">
      <div class="card stats-card bg-primary-gradient text-white">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h3 class="mb-0" id="userCount">0</h3>
              <p class="mb-0 text-white">Total Users</p>
            </div>
            <div class="stats-icon">
              <i class="fas fa-users"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card stats-card bg-success-gradient text-white">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h3 class="mb-0" id="mechanicCount">0</h3>
              <p class="mb-0 text-white">Active Mechanics</p>
            </div>
            <div class="stats-icon">
              <i class="fas fa-tools"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card stats-card bg-warning-gradient text-white">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h3 class="mb-0" id="pendingMechanicCount">0</h3>
              <p class="mb-0 text-white">Pending Approvals</p>
            </div>
            <div class="stats-icon">
              <i class="fas fa-user-clock"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card stats-card bg-info-gradient text-white">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h3 class="mb-0" id="bookingCount">0</h3>
              <p class="mb-0 text-white">Total Bookings</p>
            </div>
            <div class="stats-icon">
              <i class="fas fa-calendar-check"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
      <!-- In the dashboard stats section, add this card -->
      <div class="col-md-3 col-lg-3 mb-4">
        <div class="card border-0 shadow-sm h-100">
          <div class="card-body d-flex flex-column">
            <div class="d-flex align-items-center mb-4">
              <div class="stats-icon bg-warning text-white me-3">
                <i class="fas fa-crown"></i>
              </div>
              <div>
                <h3 class="mb-0" id="premiumUserCount">0</h3>
                <p class="text-muted mb-0">Premium Users</p>
              </div>
            </div>
            <div class="mt-auto">
              <div class="d-flex justify-content-between">
                <span class="text-muted">Monthly</span>
                <span class="fw-bold" id="monthlySubs">0</span>
              </div>
              <div class="d-flex justify-content-between">
                <span class="text-muted">Yearly</span>
                <span class="fw-bold" id="yearlySubs">0</span>
              </div>
              <div class="d-flex justify-content-between mt-2">
                <span class="text-muted">Revenue</span>
                <span class="fw-bold" id="subRevenue">$0.00</span>
              </div>
            </div>
          </div>
          <div class="card-footer bg-white border-0">
            <a href="/admin/subscriptions" class="btn btn-sm btn-warning w-100">
              <i class="fas fa-crown me-1"></i> Manage Subscriptions
            </a>
          </div>
        </div>
      </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center bg-white">
          <h5 class="mb-0"><i class="fas fa-clipboard-list text-primary me-2"></i>Recent Bookings</h5>
          <a href="/admin/bookings" class="btn btn-sm btn-outline-primary">
            View All
          </a>
        </div>
        <div class="card-body">
          <% if (recentBookings.length === 0) { %>
            <div class="text-center py-5">
              <img src="/images/empty-bookings.png" alt="No Bookings" class="img-fluid mb-3" style="max-width: 200px;">
              <h5>No bookings found</h5>
              <p class="text-muted">There are no bookings in the system yet.</p>
            </div>
          <% } else { %>
            <div class="table-responsive">
              <table class="table table-hover align-middle">
                <thead class="table-light">
                  <tr>
                    <th>Date</th>
                    <th>User</th>
                    <th>Mechanic</th>
                    <th>Problem</th>
                    <th>Status</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% recentBookings.forEach(booking => { %>
                    <tr>
                      <td><%= new Date(booking.createdAt).toLocaleDateString() %></td>
                      <td>
                        <% if (booking.user) { %>
                          <div class="d-flex align-items-center">
                            <div class="avatar-circle bg-primary text-white me-2">
                              <%= booking.user.name.charAt(0).toUpperCase() %>
                            </div>
                            <span><%= booking.user.name %></span>
                          </div>
                        <% } else { %>
                          <span class="text-muted">N/A</span>
                        <% } %>
                      </td>
                      <td>
                        <% if (booking.mechanic) { %>
                          <div class="d-flex align-items-center">
                            <div class="avatar-circle bg-success text-white me-2">
                              <%= booking.mechanic.name.charAt(0).toUpperCase() %>
                            </div>
                            <span><%= booking.mechanic.name %></span>
                          </div>
                        <% } else { %>
                          <span class="text-muted">Not assigned</span>
                        <% } %>
                      </td>
                      <td>
                        <span class="d-inline-block text-truncate" style="max-width: 150px;" title="<%= booking.problemCategory %>">
                          <%= booking.problemCategory %>
                        </span>
                      </td>
                      <td>
                        <span class="booking-status status-<%= booking.status %>">
                          <%= booking.status %>
                        </span>
                      </td>
                      <td>
                        <a href="/admin/booking/<%= booking._id %>" class="btn btn-sm btn-primary">
                          <i class="fas fa-eye"></i> View
                        </a>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
            <div class="text-center mt-3">
              <a href="/admin/bookings" class="btn btn-outline-primary">
                <i class="fas fa-list me-2"></i> View All Bookings
              </a>
            </div>
          <% } %>
        </div>
      </div>
      
      
      <div class="row">
        <div class="col-md-6">
          <div class="card mb-4">
            <div class="card-header bg-white">
              <h5 class="mb-0"><i class="fas fa-user-check text-primary me-2"></i>Pending Mechanic Approvals</h5>
            </div>
            <div class="card-body">
              <% if (pendingMechanicCount === 0) { %>
                <div class="text-center py-4">
                  <img src="/images/empty-approvals.png" alt="No Approvals" class="img-fluid mb-3" style="max-width: 150px;">
                  <h5>No pending approvals</h5>
                  <p class="text-muted">There are no mechanic registrations pending approval.</p>
                </div>
              <% } else { %>
                <div class="alert alert-warning">
                  <div class="d-flex align-items-center">
                    <i class="fas fa-exclamation-triangle fs-4 me-3"></i>
                    <div>
                      <strong>Attention Required!</strong>
                      <p class="mb-0">You have <%= pendingMechanicCount %> mechanic registration(s) pending approval.</p>
                    </div>
                  </div>
                </div>
                <div class="d-grid">
                  <a href="/admin/mechanics" class="btn btn-primary">
                    <i class="fas fa-check-circle me-2"></i> Review Approvals
                  </a>
                </div>
              <% } %>
            </div>
          </div>
        </div>
        
        <div class="col-md-6">
          <div class="card mb-4">
            <div class="card-header bg-white">
              <h5 class="mb-0"><i class="fas fa-money-bill-wave text-primary me-2"></i>Payment Overview</h5>
            </div>
            <div class="card-body">
              <div class="d-flex justify-content-between mb-3">
                <div>
                  <h6 class="mb-0">Total Revenue</h6>
                  <h3 class="text-success">$<%= Number((paymentStats && paymentStats.totalRevenue) || 0).toFixed(2) %></h3>
                </div>
                <div>
                  <h6 class="mb-0">Completed Payments</h6>
                  <h3><%= (paymentStats && paymentStats.completed) || 0 %></h3>
                </div>
              </div>
              
              <div class="progress mb-3" style="height: 10px;">
                <div id="paymentsProgress" class="progress-bar bg-success" role="progressbar" style="width: 0%;"></div>
              </div>
              
              <div class="d-flex justify-content-between">
                <span>Completed</span>
                <span><%= (paymentStats && paymentStats.completed) || 0 %> / <%= ((paymentStats && paymentStats.completed) || 0) + ((paymentStats && paymentStats.pending) || 0) %></span>
              </div>
              
              <div class="mt-3">
                <a href="/admin/payments" class="btn btn-outline-primary w-100">
                  <i class="fas fa-credit-card me-2"></i> View Payment Details
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-4">
      <div class="card mb-4">
        <div class="card-header bg-white">
          <h5 class="mb-0"><i class="fas fa-chart-pie text-primary me-2"></i>Booking Statistics</h5>
        </div>
        <div class="card-body">
          <canvas id="bookingStatsChart" height="250"></canvas>
        </div>
      </div>
      <div class="card mb-4">
        <div class="card-header bg-white">
          <h5 class="mb-0"><i class="fas fa-chart-pie text-primary me-2"></i>Payment Statistics</h5>
        </div>
        <div class="card-body">
          <canvas id="paymentStatsChart" height="250"></canvas>
        </div>
      </div>
      
      <div class="card mb-4">
        <div class="card-header bg-white">
          <h5 class="mb-0">
            <i class="fas fa-chart-line text-primary me-2"></i>Revenue Overview
          </h5>
        </div>
        <div class="card-body">
          <canvas id="revenueChart" height="250"></canvas>
        </div>
      </div>
      
      <div class="card">
        <div class="card-header bg-white">
          <h5 class="mb-0"><i class="fas fa-bolt text-primary me-2"></i>Quick Actions</h5>
        </div>
        <div class="card-body">
          <div class="d-grid gap-2">
            <a href="/admin/users" class="btn btn-outline-primary">
              <i class="fas fa-users me-2"></i> Manage Users
            </a>
            <a href="/admin/mechanics" class="btn btn-outline-success">
              <i class="fas fa-tools me-2"></i> Manage Mechanics
            </a>
            <a href="/admin/bookings" class="btn btn-outline-info">
              <i class="fas fa-calendar-check me-2"></i> Manage Bookings
            </a>
            <a href="/admin/payments" class="btn btn-outline-warning">
              <i class="fas fa-money-bill-wave me-2"></i> Manage Payments
            </a>
            <a href="/auth/logout" class="btn btn-outline-danger">
              <i class="fas fa-sign-out-alt me-2"></i> Logout
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', async function() {
  try {
    const response = await fetch('/admin/api/dashboard');
    const data = await response.json();

    // Update stats
    document.getElementById('userCount').textContent = data.userCount || 0;
    document.getElementById('mechanicCount').textContent = data.mechanicCount || 0;
    document.getElementById('pendingMechanicCount').textContent = data.pendingMechanicCount || 0;
    document.getElementById('bookingCount').textContent = data.bookingCount || 0;
    document.getElementById('premiumUserCount').textContent = data.premiumUserCount || 0;
    document.getElementById('monthlySubs').textContent = data.subscriptionStats?.monthly || 0;
    document.getElementById('yearlySubs').textContent = data.subscriptionStats?.yearly || 0;
    document.getElementById('subRevenue').textContent = '$' + (data.paymentStats?.subscriptionRevenue || 0).toFixed(2);

    // Update recent bookings table
    const tbody = document.querySelector('.table tbody');
    if (tbody && data.recentBookings && data.recentBookings.length > 0) {
      tbody.innerHTML = data.recentBookings.map(booking => `
        <tr>
          <td>${new Date(booking.createdAt).toLocaleDateString()}</td>
          <td>
            ${booking.user ? `
              <div class="d-flex align-items-center">
                <div class="avatar-circle bg-primary text-white me-2">
                  ${booking.user.name.charAt(0).toUpperCase()}
                </div>
                <span>${booking.user.name}</span>
              </div>
            ` : '<span class="text-muted">N/A</span>'}
          </td>
          <td>
            ${booking.mechanic ? `
              <div class="d-flex align-items-center">
                <div class="avatar-circle bg-success text-white me-2">
                  ${booking.mechanic.name.charAt(0).toUpperCase()}
                </div>
                <span>${booking.mechanic.name}</span>
              </div>
            ` : '<span class="text-muted">Not assigned</span>'}
          </td>
          <td>
            <span class="d-inline-block text-truncate" style="max-width: 150px;" title="${booking.problemCategory}">
              ${booking.problemCategory}
            </span>
          </td>
          <td>
            <span class="booking-status status-${booking.status}">
              ${booking.status}
            </span>
          </td>
          <td>
            <a href="/admin/booking/${booking._id}" class="btn btn-sm btn-primary">
              <i class="fas fa-eye"></i> View
            </a>
          </td>
        </tr>
      `).join('');
    }

    // Update pending mechanic approvals section
    const pendingSection = document.querySelector('.card-body .text-center, .card-body .alert');
    if (pendingSection && data.pendingMechanicCount === 0) {
      pendingSection.innerHTML = `
        <div class="text-center py-4">
          <img src="/images/empty-approvals.png" alt="No Approvals" class="img-fluid mb-3" style="max-width: 150px;">
          <h5>No pending approvals</h5>
          <p class="text-muted">There are no mechanic registrations pending approval.</p>
        </div>
      `;
    } else if (pendingSection && data.pendingMechanicCount > 0) {
      pendingSection.innerHTML = `
        <div class="alert alert-warning">
          <div class="d-flex align-items-center">
            <i class="fas fa-exclamation-triangle fs-4 me-3"></i>
            <div>
              <strong>Attention Required!</strong>
              <p class="mb-0">You have ${data.pendingMechanicCount} mechanic registration(s) pending approval.</p>
            </div>
          </div>
        </div>
        <div class="d-grid">
          <a href="/admin/mechanics" class="btn btn-primary">
            <i class="fas fa-check-circle me-2"></i> Review Approvals
          </a>
        </div>
      `;
    }

    // Update payment overview
    const totalRevenueEl = document.querySelector('.text-success');
    if (totalRevenueEl) totalRevenueEl.textContent = '$' + (data.paymentStats?.totalRevenue || 0).toFixed(2);

    const completedPaymentsEl = document.querySelector('h3:not(.text-success)');
    if (completedPaymentsEl) completedPaymentsEl.textContent = data.paymentStats?.completed || 0;

    const progressBar = document.getElementById('paymentsProgress');
    if (progressBar) {
      const completed = data.paymentStats?.completed || 0;
      const pending = data.paymentStats?.pending || 0;
      const total = completed + pending;
      const pct = total > 0 ? ((completed / total) * 100).toFixed(2) : 0;
      progressBar.style.width = pct + '%';
    }

    const progressText = document.querySelector('.d-flex.justify-content-between span:last-child');
    if (progressText) {
      const completed = data.paymentStats?.completed || 0;
      const pending = data.paymentStats?.pending || 0;
      progressText.textContent = `${completed} / ${completed + pending}`;
    }

    // Update charts
    updateCharts(data);

  } catch (error) {
    console.error('Error loading dashboard data:', error);
  }
});

function updateCharts(data) {
  // Booking stats chart
  const bookingCtx = document.getElementById('bookingStatsChart');
  if (bookingCtx) {
    if (!bookingCtx.chart) {
      bookingCtx.chart = new Chart(bookingCtx.getContext('2d'), {
        type: 'doughnut',
        data: {
          labels: ['Pending', 'Accepted', 'In Progress', 'Completed', 'Cancelled', 'Emergency'],
          datasets: [{
            data: [0, 0, 0, 0, 0, 0],
            backgroundColor: ['#f8961e', '#4cc9f0', '#4361ee', '#38b000', '#ef476f', '#ff6b6b'],
            borderWidth: 0
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              position: 'bottom',
              labels: {
                boxWidth: 12,
                padding: 15
              }
            }
          },
          cutout: '70%'
        }
      });
    }
    bookingCtx.chart.data.datasets[0].data = [
      data.bookingStats?.pending || 0,
      data.bookingStats?.accepted || 0,
      data.bookingStats?.inProgress || 0,
      data.bookingStats?.completed || 0,
      data.bookingStats?.cancelled || 0,
      data.bookingStats?.emergency || 0
    ];
    bookingCtx.chart.update();
  }

  // Payment stats chart
  const paymentCtx = document.getElementById('paymentStatsChart');
  if (paymentCtx) {
    if (!paymentCtx.chart) {
      paymentCtx.chart = new Chart(paymentCtx.getContext('2d'), {
        type: 'doughnut',
        data: {
          labels: ['Pending', 'Completed'],
          datasets: [{
            data: [0, 0],
            backgroundColor: ['#f8961e', '#4cc9f0'],
            borderWidth: 0
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              position: 'bottom',
              labels: {
                boxWidth: 12,
                padding: 15
              }
            }
          },
          cutout: '70%'
        }
      });
    }
    paymentCtx.chart.data.datasets[0].data = [
      data.paymentStats?.pending || 0,
      data.paymentStats?.completed || 0
    ];
    paymentCtx.chart.update();
  }

  // Revenue chart
  const revenueCtx = document.getElementById('revenueChart');
  if (revenueCtx) {
    if (!revenueCtx.chart) {
      revenueCtx.chart = new Chart(revenueCtx.getContext('2d'), {
        type: 'line',
        data: {
          labels: [],
          datasets: [
            {
              label: 'Booking Revenue',
              data: [],
              borderColor: '#00b4d8',
              backgroundColor: 'rgba(0, 180, 216, 0.1)',
              borderWidth: 2,
              tension: 0.4,
              fill: true
            },
            {
              label: 'Subscription Revenue',
              data: [],
              borderColor: '#f15bb5',
              backgroundColor: 'rgba(241, 91, 181, 0.1)',
              borderWidth: 2,
              tension: 0.4,
              fill: true
            }
          ]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              position: 'top'
            }
          },
          scales: {
            y: {
              beginAtZero: true,
              ticks: {
                callback: function (value) {
                  return '$' + value;
                }
              },
              title: {
                display: true,
                text: 'Revenue ($)'
              }
            },
            x: {
              title: {
                display: true,
                text: 'Month'
              }
            }
          }
        }
      });
    }
    if (data.monthlyRevenueStats) {
      const labels = data.monthlyRevenueStats.map(item => item.month);
      const bookingRevenue = data.monthlyRevenueStats.map(item => item.booking);
      const subscriptionRevenue = data.monthlyRevenueStats.map(item => item.subscription);

      revenueCtx.chart.data.labels = labels;
      revenueCtx.chart.data.datasets[0].data = bookingRevenue;
      revenueCtx.chart.data.datasets[1].data = subscriptionRevenue;
      revenueCtx.chart.update();
    }
  }
}
</script>

